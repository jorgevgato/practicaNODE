<%- include('header.ejs') %>

<p>User ID: <%= session.userId %> </p>

<% if (!session.userId) { %>

    <p>¡<a href="/login">Inicia sesión</a> para acceder a tus productos!</p>
    <img src="/PopLogo.png" class="img-fluid" alt="logo">

<% } else { %>

<div class="container-fluid">
    <h1>Productos</h1>
    <div class="row g-1">
        <% products.forEach(product => { %>
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src=<%= product.image  %> class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">Disponible a un precio de <%= product.price %> €.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><em><%= product.tags %></em></li>
                        <li class="list-group-item">A second item</li>
                        <li class="list-group-item">A third item</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% } %>

<%- include('footer.ejs') %>