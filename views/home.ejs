<%- include('header.ejs') %>

<% if (!session.userId) { %>
    <div class="container-fluid">
        <h1>¡<a href="/login">Inicia sesión</a> para acceder a tus productos!</h1>
        <img src="/PopLogo.png" class="img-fluid" alt="logo">
    </div>

<% } else { %>

<div class="container-fluid">
    <h1>Productos</h1>
    <div class="row g-1">
        <% products.forEach(product => { %>
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src=<%= product.image  %> class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">Disponible a un precio de <%= product.price %> €.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><em><%= product.tags %></em></li>
                    </ul>
                    <div class="card-body">
                        <a href="/products/delete/<%= product._id %>" class="card-link">Eliminar producto</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <nav>
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Anterior</a>
                </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= Number(i) === Number(currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>

            <% if (Number(currentPage) < Number(totalPages)) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= Number(currentPage) + 1 %>">Siguiente</a>
                </li>
            <% } %>
        </ul>
    </nav>

</div>

<% } %>

<%- include('footer.ejs') %>